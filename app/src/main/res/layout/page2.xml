<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentStart="true"
        android:text="产品名"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/editTextid" />



    <EditText
        android:id="@+id/editTextid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""

        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/editTextid"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextcompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/editTextnumber"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextretenloca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/editTextcompany"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextcasid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/editTextretenloca"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextspecification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/editTextcasid"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/editTextspecification"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextstoragetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/editTextprice"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textViewnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        android:layout_alignTop="@+id/editTextnumber"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editTextnumber"
        android:layout_alignEnd="@+id/textViewid" />

    <TextView
        android:id="@+id/textViewcompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="品牌"
        android:layout_alignTop="@+id/editTextcompany"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editTextcompany"
        android:layout_alignEnd="@+id/textViewnumber" />

    <TextView
        android:id="@+id/textViewretenloca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewnumber"
        android:layout_alignTop="@+id/editTextretenloca"
        android:text="存放地点"

        android:layout_above="@+id/editTextcasid"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewcasid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewretenloca"
        android:layout_alignTop="@+id/editTextcasid"
        android:text="CASID"
        android:layout_above="@+id/editTextspecification"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewspecification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editTextspecification"
        android:text="规格型号"
        android:layout_above="@+id/editTextprice"
        android:layout_alignEnd="@+id/textViewcasid" />

    <TextView
        android:id="@+id/textViewprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewspecification"
        android:layout_alignTop="@+id/editTextprice"
        android:text="单价"
        android:layout_alignBottom="@+id/editTextprice"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewstoragetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="入库时间"
        android:layout_alignTop="@+id/editTextstoragetime"
        android:layout_alignEnd="@+id/textViewprice"
        android:layout_alignBottom="@+id/editTextstoragetime"
        android:layout_alignParentStart="true" />

    <Button

        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入数据"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="138dp"
        android:layout_marginBottom="57dp" />


</RelativeLayout>
